<html>
    <head>
        <%- include("../default/head.ejs") %>
    </head>
    <body>
        <%- include("../default/flash.ejs") %>
        <div class="container">
            <div class="row justify-content-md-center h-100">
                <div class="col-md-4 my-auto">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title text-center mb-4 mt-1"><%= page.title %></h4>
                            <hr>
                            <form method="POST" class="mb-0" onsubmit="utils.disableButton($('#btn-create-user'), 'Creating...'); return true;">
                                <div class="form-group">
                                    <label for="input-user-full">Fullname</label>
                                    <input type="text" class="form-control" id="input-user-full" name="fullname" placeholder="John DOE">
                                </div>
                                <div class="form-group">
                                    <label for="input-user-login">User login</label>
                                    <input type="text" class="form-control" id="input-user-login" name="name" placeholder="admin">
                                </div>
                                <div class="form-group">
                                    <label for="input-user-login">Email address</label>
                                    <input type="email" class="form-control" id="input-user-email" name="email" placeholder="john.doe@example.com">
                                </div>
                                <div class="form-group">
                                    <label for="input-user-pass">Password</label>
                                    <input type="password" class="form-control" id="input-user-pass" name="password" placeholder="Password">
                                </div>
                                <button type="submit" class="btn btn-primary btn-block" id="btn-create-user">Create this user</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>