<html>
    <head>
        <%- include("../default/head.ejs") %>
    </head>
    <body>
        <%- include("../default/flash.ejs") %>
        <%- include("../default/api.ejs") %>
        <script>
            window.currentUsername = "<%- currentUsername %>";
        </script>
        <%- startPageScript("users_all", ["/socket.io/socket.io.js", "/static/js/thin_buttons.dist.js"]) %>
        
        <div id="page">
            <header>
                <%- include("../default/header.ejs") %>
            </header>
            
            <div id="page-contents">
                <%- include("../default/loading.ejs") %>
                <div class="container-fluid" id="main-container">
                    <div class="row mt-3 mx-3" id="title-row">
                        <div class="w-100">
                            <h3 class="d-inline">List of platform users:</h3>
                            <div class="btn-group btn-group-sm float-right my-1" role="group">
                                <a href="create" class="btn btn-sm btn-primary"><i class="fas fa-plus"></i> Create a new user</a>
                                <button class="btn btn-secondary btn-sm thin-toggle-btn" type="button" title="Toggle thin buttons" onclick="thin_buttons.toggle()"><i class="fas fa-compress thin-toggle"></i><i class="fas fa-expand thin-toggle"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3 mx-3" id="users-row">
                        <p class="w-100 status-msg" id="users-status">Loading...</p>
                        <div class="card w-100 mt-1" style="display: none;" id="users-card">
                            <ul class="list-group list-group-flush" id="users-list">
                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <%- include("../default/footer.ejs") %>
        </div>

        <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmModal-title">Delete a user</h5>
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="confirmModal-content">
                        
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" id="confirmModal-button" onclick="users_all.confirm()"></button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
